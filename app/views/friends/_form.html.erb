<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <div class="form-group row">
      <%= form.label :first_name, style: "display: block", class:"col-sm-2" %>
      <%= form.text_field :first_name, class:"col-sm-10" %>
    </div>
    <div class="form-group row">
      <%= form.label :last_name, style: "display: block", class:"col-sm-2" %>
      <%= form.text_field :last_name, class:"col-sm-10" %>
    </div>

    <div class="form-group row">
      <%= form.label :email, style: "display: block", class:"col-sm-2" %>
      <%= form.text_field :email, class:"col-sm-10" %>
    </div>

    <div class="form-group row">
      <%= form.label :phone, style: "display: block",  class:"col-sm-2"%>
      <%= form.text_field :phone, class:"col-sm-10" %>
    </div>

    <div class="form-group row">
      <%= form.label :twitter, style: "display: block", class:"col-sm-2"%>
      <%= form.text_field :twitter, class:"col-sm-10" %>
    </div>

    <div class="form-group row">
      <%= form.number_field :user_id, id: :friend_user_id, value:current_user.id, class:"col-sm-10", type:'hidden' %>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>
